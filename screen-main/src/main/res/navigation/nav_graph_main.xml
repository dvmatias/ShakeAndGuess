<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph_main"
	app:startDestination="@id/home_fragment_dest">

	<fragment
		android:id="@+id/home_fragment_dest"
		android:name="com.cmdv.screen.fragments.home.HomeFragment"
		android:label="fragment_home"
		tools:layout="@layout/fragment_home" >
		<action
			android:id="@+id/action_homeFragment_to_preGameFragment"
			app:destination="@id/pre_game_fragment_dest" />
	</fragment>
	<fragment
		android:id="@+id/pre_game_fragment_dest"
		android:name="com.cmdv.screen.fragments.pregame.PreGameFragment"
		android:label="fragment_pre_game"
		tools:layout="@layout/fragment_pre_game" >
		<action
			android:id="@+id/action_preGameFragment_to_gameFragment"
			app:destination="@id/game_fragment_dest" />
		<action
			android:id="@+id/action_preGameFragment_to_homeFragment"
			app:destination="@id/home_fragment_dest" />
	</fragment>
	<fragment
		android:id="@+id/game_fragment_dest"
		android:name="com.cmdv.screen.fragments.game.GameFragment"
		android:label="fragment_game"
		tools:layout="@layout/fragment_game" >
		<action
			android:id="@+id/action_gameFragment_to_resultsFragment"
			app:destination="@id/results_fragment_dest" />
	</fragment>
	<fragment
		android:id="@+id/results_fragment_dest"
		android:name="com.cmdv.screen.fragments.results.ResultsFragment"
		android:label="fragment_results"
		tools:layout="@layout/fragment_results" >
		<action
			android:id="@+id/action_resultsFragment_to_homeFragment"
			app:destination="@id/game_fragment_dest" />
	</fragment>
</navigation>